{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2023",
    "lib": [
      "ES2023"
    ],
    "sourceMap": true,
    "strict": true,
    "outDir": "lib",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ]
}
